@model Bloggie.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Dev Blog
            </h1>
            <p class="lead">
                Bloggie is the home to coding blogs covering as vast range of
                topics like HTML, CSS, Javascript, ASP.NET, C#, Angular etc.
                Want to read the latest dev articles? Join the bloggie app and
                get weekly blogs in your email.
            </p>
        </div>



        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/374563/pexels-photo-374563.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1]" alt="Bloggie - Dev blogs"
                 class="d-block mx-lg-auto img-fluid" width="350" />
        </div>
    </div>
</div>

<div class="container">
    <div class="row just-content-center">
        <div class="col-6 d-flex">
            @if (Model != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1 mb-4">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model != null && Model.BlogPosts.Any())
        {
            @foreach (var blogPost in Model.BlogPosts)
            {
                <div class="col-12 col-md-4 mb-4">
                    <div class="bg-light box-shadow p-4">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid" />

                        <h2 class="mb-2 blog-details-heading">@blogPost.Heading</h2>
                        <p class="mb-2 blog-details-author">
                            Author: @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-2">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-info me-1">@tag.Name</span>
                            }
                        </p>
                        <p class="mb-2 blog-details-shortdescription">@blogPost.ShortDescription</p>

                        <a class="btn btn-dark mt-4 blog-details-btn"
                           asp-area=""
                           asp-controller="Blogs"
                           asp-action="Index"
                           asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                    </div>
                </div>
            }
        }
    </div>
</div>

